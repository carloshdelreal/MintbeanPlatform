{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:vue/essential",
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [ "vue", "@typescript-eslint", "pug", "@vue/cli-plugin-eslint" ],
  "overrides": [
    {
        "files": ["**/*.vue"],
        "processor": "vue",
        "rules": {
          "semi": ["error", "always"]
        }
    }
  ]
}
